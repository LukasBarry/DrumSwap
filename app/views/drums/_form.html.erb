<%= form_for(@drum) do |f| %>
  <% if @drum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drum.errors.count, "error") %> prohibited this drum from being saved:</h2>

      <ul>
      <% @drum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "sr-only" %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "sr-only" %><br>
    <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :swap, class: "sr-only" %><br>
    <%= f.text_field :swap, class: "form-control", placeholder: "Swap Offer" %>
  </div>
  <div class="field form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="form-group cant-see-me">
    <%= f.number_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
